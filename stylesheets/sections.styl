.section-body
  padding: 12px 16px

  .section-column
    table
      width: 100%

    > .col-sm-8
      margin-top: 15px

      @media (min-width: 768px)
        margin-top: 0px

      .col-sm-1,
      .col-sm-2,
      .col-sm-3,
      .col-sm-4,
      .col-sm-5,
      .col-sm-6,
      .col-sm-7,
      .col-sm-8,
      .col-sm-9,
      .col-sm-10,
      .col-sm-11,
      .col-sm-12
        margin-top: 5px;

    &:last-child
      border-bottom: 0

    padding: 30px 0

    .small
      font-size: 14px
      color: @gray-light
      font-weight: 300

  .section-column-header
    font-size: 18px